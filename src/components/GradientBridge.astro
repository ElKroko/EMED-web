---
export interface Props {
  from?: string;
  to?: string;
  height?: string;
  className?: string;
}

const { 
  from = "var(--color-crema)",
  to = "#2C5282",
  height = "200px",
  className = ""
} = Astro.props;
---

<div 
  class={`gradient-bridge ${className}`}
  style={`background: linear-gradient(180deg, ${from} 0%, ${to} 100%); height: ${height};`}
>
  <!-- Contenido opcional (slot) -->
  <slot />
</div>

<style>
  .gradient-bridge {
    width: 100%;
    position: relative;
  }
  
  /* Responsive height adjustments */
  @media (max-width: 768px) {
    .gradient-bridge {
      height: 150px !important;
    }
  }
  
  @media (max-width: 480px) {
    .gradient-bridge {
      height: 100px !important;
    }
  }
</style>