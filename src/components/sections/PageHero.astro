---
export interface Props {
  heading: string;
  bgColor?: string;
  waveDir?: 'top' | 'bottom' | 'both';
  textAlign?: 'left' | 'center' | 'right';
  className?: string;
}

const { 
  heading,
  bgColor = "var(--color-celeste)",
  waveDir = 'bottom',
  textAlign = 'right',
  className = ""
} = Astro.props;
---

<section class={`page-hero relative py-20 ${className}`} style={`background-color: ${bgColor};`}>
  
  <!-- Wave Top -->
  {(waveDir === 'top' || waveDir === 'both') && (
    <div class="wave-top absolute top-0 left-0 w-full overflow-hidden leading-none">
      <svg 
        class="relative block w-full h-16 md:h-24" 
        xmlns="http://www.w3.org/2000/svg" 
        viewBox="0 0 1200 120" 
        preserveAspectRatio="none"
      >
        <path 
          d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" 
          fill="var(--color-white)"
        />
      </svg>
    </div>
  )}

  <div class="container mx-auto px-4 relative z-10">
    <div class={`text-${textAlign}`}>
      <h1 class="page-hero-title text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 drop-shadow-2xl">
        {heading}
      </h1>
    </div>
  </div>

  <!-- Wave Bottom -->
  {(waveDir === 'bottom' || waveDir === 'both') && (
    <div class="wave-bottom absolute bottom-0 left-0 w-full overflow-hidden leading-none rotate-180">
      <svg 
        class="relative block w-full h-16 md:h-24" 
        xmlns="http://www.w3.org/2000/svg" 
        viewBox="0 0 1200 120" 
        preserveAspectRatio="none"
      >
        <path 
          d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" 
          fill="var(--color-white)"
        />
      </svg>
    </div>
  )}

</section>

<style>
  .page-hero {
    min-height: 40vh;
    display: flex;
    align-items: center;
  }
  
  .page-hero-title {
    font-weight: var(--font-weight-bold);
    letter-spacing: -0.02em;
    line-height: 1.1;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .page-hero {
      min-height: 30vh;
      padding-top: var(--space-12);
      padding-bottom: var(--space-12);
    }
    
    .page-hero-title {
      font-size: var(--font-size-4xl);
    }
  }
  
  @media (max-width: 480px) {
    .page-hero-title {
      font-size: var(--font-size-3xl);
    }
  }
</style>