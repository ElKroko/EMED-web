---
import NewsletterForm from '../forms/NewsletterForm.astro';

export interface Social {
  icon: string;
  href: string;
  label: string;
}

export interface Props {
  socials?: Social[];
  contact?: {
    address: string;
    phone: string;
    email: string;
  };
  className?: string;
}

const { 
  socials = [
    { icon: 'facebook', href: 'https://facebook.com/emed', label: 'Facebook' },
    { icon: 'instagram', href: 'https://instagram.com/emed', label: 'Instagram' },
    { icon: 'linkedin', href: 'https://linkedin.com/company/emed', label: 'LinkedIn' },
    { icon: 'youtube', href: 'https://youtube.com/emed', label: 'YouTube' }
  ],
  contact = {
    address: "Av. Providencia 1234, Oficina 567\nProvidencia, Santiago, Chile",
    phone: "+56 2 2345 6789",
    email: "info@emed.cl"
  },
  className = ""
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class={`site-footer bg-gradient-footer text-white ${className}`}>
  
  <!-- Spacer for gradient area -->
  <div class="footer-gradient-spacer"></div>
  
  <!-- Main Footer Content -->
  <div class="container mx-auto px-4 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      <!-- Columna 1: Logo y descripción -->
      <div class="lg:col-span-1">
        <div class="mb-6">
          <img 
            src="/src/assets/images/common/emed_logo_footer.svg" 
            alt="EMED Logo" 
            class="h-20 w-auto mb-4"
          />
          <p class="text-white leading-relaxed">
            Centro de formación especializado en mediación con más de 19 años de experiencia. 
            Formamos mediadores profesionales con metodología práctica y certificación reconocida.
          </p>
        </div>
        
        <!-- Logos en 3 columnas -->
        <div class="grid grid-cols-3 gap-4 mt-4">
          <img 
            src="/src/assets/images/brands/pasificando_logo.png" 
            alt="Pasificando Logo" 
            class="h-10 w-28 object-contain opacity-70 hover:opacity-100 transition-opacity duration-200 filter brightness-0 invert"
          />
          <img 
            src="/src/assets/images/pages/logo_sence-removebg-preview.png" 
            alt="Logo SENCE" 
            class="h-10 w-28 object-contain opacity-70 hover:opacity-100 transition-opacity duration-200"
          />
          <img 
            src="/src/assets/images/pages/nch2728.png" 
            alt="Logo NCH" 
            class="h-10 w-28 object-contain opacity-70 hover:opacity-100 transition-opacity duration-200"
          />
        </div>
      </div>

      <!-- Columna 2: Newsletter -->
      <div class="lg:col-span-1 text-center lg:text-left">
        <h4 class="text-xl font-semibold text-white mb-6">Suscríbete a nuestro newsletter</h4>
        <p class="text-white mb-6 leading-relaxed">
          Recibe las últimas noticias sobre nuestros programas, eventos especiales y contenido exclusivo sobre mediación.
        </p>
        <NewsletterForm />
      </div>

      <!-- Columna 3: Contacto y Enlaces -->
      <div class="lg:col-span-1 text-center lg:text-left">
        <h4 class="text-xl font-semibold text-white mb-6">Contacto</h4>
        
        <!-- Información de contacto -->
        <div class="space-y-4 mb-8">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-celeste mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <p class="text-white text-sm leading-relaxed" set:html={contact.address.replace('\n', '<br>')}></p>
          </div>
          
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-celeste flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${contact.phone.replace(/\s/g, '')}`} class="text-white text-sm hover:text-gray-200 transition-colors duration-200">
              {contact.phone}
            </a>
          </div>
          
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-celeste flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${contact.email}`} class="text-white text-sm hover:text-gray-200 transition-colors duration-200">
              {contact.email}
            </a>
          </div>
        </div>

        <!-- Redes Sociales -->
        <div>
          <h5 class="font-semibold text-white mb-4">Síguenos</h5>
          <div class="flex space-x-4">
            {socials.map((social) => (
              <a 
                href={social.href} 
                class="social-link text-white hover:text-celeste transition-colors duration-200"
                aria-label={social.label}
                target="_blank"
                rel="noopener noreferrer"
              >
                {social.icon === 'facebook' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
                {social.icon === 'instagram' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.618 5.367 11.986 11.988 11.986s11.987-5.368 11.987-11.986C24.014 5.367 18.635.001 12.017.001zM8.75 12.017c0-1.804 1.463-3.267 3.267-3.267s3.267 1.463 3.267 3.267-1.463 3.267-3.267 3.267-3.267-1.463-3.267-3.267zm7.728-3.924c-.42 0-.761-.341-.761-.761s.341-.761.761-.761.761.341.761.761-.341.761-.761.761zm-2.461 8.641H9.983c-1.907 0-3.456-1.549-3.456-3.456V9.244c0-1.907 1.549-3.456 3.456-3.456h4.034c1.907 0 3.456 1.549 3.456 3.456v4.034c0 1.907-1.549 3.456-3.456 3.456z"/>
                  </svg>
                )}
                {social.icon === 'linkedin' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {social.icon === 'youtube' && (
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      </div>

    </div>
  </div>
  
  <!-- Bottom Footer -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-300 text-sm">
          © {currentYear} EMED - Centro de Estudios de Mediación. Todos los derechos reservados. Desarrollado por DIGITALISMO
        </p>
        <div class="flex space-x-6 mt-4 md:mt-0">
          <a href="/privacidad" class="text-gray-300 hover:text-white text-sm transition-colors duration-200">
            Política de Privacidad
          </a>
          <a href="/terminos" class="text-gray-300 hover:text-white text-sm transition-colors duration-200">
            Términos de Uso
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--gradient-footer);
    position: relative;
  }
  
  .footer-gradient-spacer {
    height: 30vh;
    min-height: 150px;
  }
  
  .social-link {
    color: var(--color-white);
    transition: color var(--transition-fast);
  }
  
  .social-link:hover {
    color: var(--color-celeste);
  }
  
  .social-link svg {
    transition: transform var(--transition-fast);
  }
  
  .social-link:hover svg {
    transform: scale(1.1);
  }
</style>