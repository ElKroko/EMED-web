  <!-- Bottom Footer -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-4 py-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">
          © {new Date().getFullYear()} EMED. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6 mt-2 md:mt-0">
          <a href="/privacidad" class="text-gray-400 hover:text-white text-sm transition duration-200">
            Política de Privacidad
          </a>
          <a href="/terminos" class="text-gray-400 hover:text-white text-sm transition duration-200">
            Términos de Uso
          </a>
