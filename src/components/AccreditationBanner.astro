---
export interface Badge {
  name: string;
  src: string;
  alt: string;
}

export interface Props {
  heading?: string;
  sub?: string;
  description?: string;
  mascotSrc?: string;
  className?: string;
}

const { 
  heading = "Te capacitamos con acreditación",
  sub = "Sistema de Gestión de Calidad",
  description = "Emed a través de su OTEC EcoWorking Capacitaciones SpA cumple con la norma chilena NCh2728 de gestión de la calidad en eduacación para comercializar, diseñar, planificar y ejecutar servicios de capacitación.",
  sub_description = "*Certificada hasta diciembre 2028",
  mascotSrc = "/mascot-emed.svg",
  className = ""
} = Astro.props;
---

<section class={`accreditation-banner relative py-20 bg-crema ${className}`}>

  <div class="container mx-auto px-4 relative z-10">
    <div class="grid grid-cols-5 gap-12 items-center">
      
      <!-- Contenido principal - 60% -->
      <div class="col-span-3 text-left">
        <h2 class="text-6xl md:text-5xl lg:text-6xl font-bold text-black mb-4 leading-tight">
          {heading}
        </h2>
        
        <!-- Subtítulo -->
        <h3 class="text-2xl md:text-3xl font-light text-gray-400 mb-8">
          {sub}
        </h3>
        
        <!-- Párrafo descripción -->
        <p class="text-base md:text-lg text-gray-700 mb-8 leading-relaxed max-w-lg">
          {description}
        </p>
        
        <!-- Logos de acreditación en dos columnas -->
        <div class="grid grid-cols-2 gap-8 max-w-md">
          <div class="logo-container bg-white rounded-lg p-6 transition-all duration-300 hover:scale-105 flex items-center justify-center">
            <img 
              src="/src/assets/landing/logo_sence-removebg-preview.png"
              alt="Logo SENCE - Servicio Nacional de Capacitación y Empleo"
              class="h-12 md:h-16 w-auto object-contain"
              loading="lazy"
            />
          </div>
          
          <div class="logo-container bg-white rounded-lg p-6 transition-all duration-300 hover:scale-105 flex items-center justify-center">
            <img 
              src="/src/assets/landing/nch2728.png"
              alt="Logo NCH - Norma Chilena"
              class="h-12 md:h-16 w-auto object-contain"
              loading="lazy"
            />
          </div>
        </div>
        <p class="text-sm text-gray-500 mt-4 pt-6">
          {sub_description}
        </p>
      </div>

      <!-- Mascota/Isotipo - 40% -->
      <div class="col-span-2 flex justify-center">
        <div class="mascot-container relative">
          {mascotSrc && (
            <div class="relative group">
              <img 
                src={mascotSrc}
                alt="Mascota EMED"
                class="w-64 h-64 md:w-80 md:h-80 object-contain group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </div>
          )}
        </div>
      </div>

    </div>

  </div>
</section>

<style>
  .accreditation-banner {
    position: relative;
  }
  
  .logo-container {
    transition: all var(--transition-base);
  }
  
  .logo-container:hover {
    transform: scale(1.05);
  }
  
  .mascot-container {
    animation: float 6s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
</style>