---
import Layout from '../layouts/Layout.astro';
import { getEmedProducts } from '../lib/wp';

// Obtener productos de WooCommerce
let programas = [];
try {
  programas = await getEmedProducts({ per_page: 50, orderby: 'menu_order', order: 'asc' });
} catch (error) {
  console.error('Error al cargar productos:', error);
  // Fallback: usar datos estáticos si WooCommerce no está disponible
  programas = [];
}

// Si no hay productos de WooCommerce, mostrar mensaje
const hasProducts = programas.length > 0;
---

<Layout 
  title="Programas - EMED | Diplomados y Cursos de Mediación"
  description="Descubre nuestra amplia oferta de diplomados y cursos especializados en mediación. Formación profesional con certificación reconocida."
>
  <div class="bg-crema min-h-screen">
  
    <!-- Hero de Programas -->
    <section class="hero-programas relative overflow-hidden py-24">
      <!-- SVG de fondo -->
      <div class="absolute inset-0">
        <svg viewBox="0 0 1200 800" class="w-full h-full" preserveAspectRatio="none">
          <!-- Forma celeste -->
          <path d="M0,0 L1200,0 L1200,650 C1000,620 800,660 600,640 C400,620 200,660 0,650 Z" fill="#7EC5D6"/>
        </svg>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center text-white">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6">
            Nuestros Programas
          </h1>
          <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed text-center">
            Formación especializada en mediación con metodología práctica y certificación reconocida
          </p>
          <div class="flex justify-center space-x-4">
            <span class="inline-block bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
              {programas.length} Programas Disponibles
            </span>
            <span class="inline-block bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
              Modalidades Flexibles
            </span>
          </div>
        </div>
      </div>
      
      <!-- Forma orgánica inferior -->
      <div class="absolute bottom-0 left-0 right-0 h-24">
        <svg viewBox="0 0 1200 120" class="w-full h-full" preserveAspectRatio="none">
          <path d="M0,120 C300,80 500,60 600,80 C700,100 900,60 1200,80 L1200,120 Z" fill="#FEF7E8"/>
        </svg>
      </div>
    </section>

    <!-- Diplomados Especializados - Sección Destacada -->
    <section class="py-16 bg-gradient-to-br from-celeste to-turquesa">
      <div class="container mx-auto px-4">
        <div class="text-center text-white mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            Diplomados Especializados
          </h2>
          <p class="text-xl opacity-90 max-w-3xl mx-auto">
            Programas de alta especialización con certificación oficial y metodología práctica para profesionales
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto mb-12">
          
          <!-- Mediación Familiar -->
          <div class="bg-white/10 backdrop-blur rounded-2xl p-6 text-white hover:bg-white/20 transition-all duration-300">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-lg">Mediación Familiar</h3>
                <span class="text-sm bg-naranja px-2 py-1 rounded text-white">MÁS POPULAR</span>
              </div>
            </div>
            <p class="text-sm opacity-90 mb-4">Certificación oficial del Ministerio de Justicia • 120 horas</p>
          </div>

          <!-- Mediación Escolar -->
          <div class="bg-white/10 backdrop-blur rounded-2xl p-6 text-white hover:bg-white/20 transition-all duration-300">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-lg">Mediación Escolar</h3>
                <span class="text-sm bg-green-600 px-2 py-1 rounded text-white">PARA EDUCADORES</span>
              </div>
            </div>
            <p class="text-sm opacity-90 mb-4">100% Online para profesores • 80 horas flexibles</p>
          </div>

          <!-- Mediación Laboral -->
          <div class="bg-white/10 backdrop-blur rounded-2xl p-6 text-white hover:bg-white/20 transition-all duration-300">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-lg">Mediación Laboral</h3>
                <span class="text-sm bg-purple-600 px-2 py-1 rounded text-white">PARA RRHH</span>
              </div>
            </div>
            <p class="text-sm opacity-90 mb-4">Presencial especializado • 100 horas empresariales</p>
          </div>
          
        </div>

        <div class="text-center">
          <a 
            href="/diplomados"
            class="inline-flex items-center px-8 py-4 bg-white text-celeste font-bold text-lg rounded-xl hover:bg-gray-100 transform hover:scale-105 transition-all duration-200 shadow-lg"
          >
            Ver Todos los Diplomados
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Otros Programas y Cursos -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
            Otros Programas y Cursos
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Cursos complementarios y programas adicionales disponibles en nuestra plataforma
          </p>
        </div>
        
        <!-- Filtros -->
        <div class="text-center mb-12">
          <div class="inline-flex bg-white rounded-full p-2 shadow-lg">
            <button class="filter-btn active px-6 py-3 rounded-full font-semibold transition-all duration-200" data-filter="todos">
              Todos
            </button>
            <button class="filter-btn px-6 py-3 rounded-full font-semibold transition-all duration-200" data-filter="Diplomado">
              Diplomados
            </button>
            <button class="filter-btn px-6 py-3 rounded-full font-semibold transition-all duration-200" data-filter="Curso">
              Cursos
            </button>
          </div>
        </div>

        <!-- Grid de Programas -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
          {hasProducts ? (
            programas.map((programa) => (
              <div class={`program-card bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 mb-8 ${programa.destacado ? 'ring-2 ring-naranja ring-opacity-50' : ''}`} data-type={programa.tipo}>
                
                {programa.destacado && (
                  <div class="bg-gradient-to-r from-naranja to-amarillo text-white px-4 py-2 text-sm font-bold text-center">
                    ⭐ MÁS POPULAR
                  </div>
                )}
                
                <!-- Imagen -->
                <div class="relative h-48 overflow-hidden">
                  <img 
                    src={programa.images && programa.images.length > 0 ? programa.images[0].src : '/images/default-programa.jpg'}
                    alt={programa.name}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                  <div class="absolute top-4 left-4">
                    <span class={`inline-block px-3 py-1 rounded-full text-sm font-bold text-white ${programa.tipo === 'Diplomado' ? 'bg-celeste' : 'bg-turquesa'}`}>
                      {programa.tipo}
                    </span>
                  </div>
                  <div class="absolute top-4 right-4">
                    <span class="inline-block bg-black/70 text-white px-3 py-1 rounded-full text-sm font-medium">
                      {programa.modalidad}
                    </span>
                  </div>
                </div>
                
                <!-- Contenido -->
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-800 mb-3">
                    {programa.name}
                  </h3>
                  
                  <div class="text-gray-600 text-sm leading-relaxed mb-4" set:html={programa.short_description || programa.description?.substring(0, 150) + '...'}>
                  </div>
                  
                  <!-- Detalles -->
                  <div class="space-y-2 mb-6">
                    <div class="flex items-center text-sm text-gray-600">
                      <svg class="w-4 h-4 mr-2 text-celeste" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span class="font-medium">Duración:</span> {programa.duracion}
                    </div>
                    
                    <div class="flex items-center text-sm text-gray-600">
                      <svg class="w-4 h-4 mr-2 text-turquesa" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                      <span class="font-medium">Modalidad:</span> {programa.modalidad}
                    </div>
                    
                    <div class="flex items-center text-sm">
                      <svg class="w-4 h-4 mr-2 text-naranja" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                      </svg>
                      <span class="font-bold text-gray-800">{programa.precio_formateado || `$${parseInt(programa.price).toLocaleString('es-CL')}`}</span>
                    </div>
                  </div>
                  
                  <!-- Botones -->
                  <div class="space-y-3">
                    <a 
                      href={`/programas/${programa.slug}`}
                      class={`inline-flex items-center justify-center w-full px-6 py-3 font-bold rounded-lg transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg ${programa.destacado ? 'bg-naranja hover:bg-amarillo text-white' : 'bg-celeste hover:bg-turquesa text-white'}`}
                    >
                      Ver Detalles
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                    
                    <a 
                      href="/admision"
                      class="inline-flex items-center justify-center w-full px-6 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-celeste hover:text-celeste transition-all duration-300"
                    >
                      Inscribirse
                    </a>
                  </div>
                </div>
                
              </div>
            ))
          ) : (
            <div class="col-span-full text-center py-16">
              <div class="bg-white rounded-2xl p-8 shadow-lg">
                <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">No hay programas disponibles</h3>
                <p class="text-gray-600 mb-6">Los productos están siendo cargados desde WordPress. Verifique la conexión.</p>
                <button onclick="window.location.reload()" class="px-6 py-3 bg-celeste text-white font-semibold rounded-lg hover:bg-turquesa transition-colors">
                  Reintentar
                </button>
              </div>
            </div>
          )}
        </div>

        <!-- CTA Inferior -->
        <div class="text-center mt-16">
          <div class="bg-white rounded-2xl p-8 shadow-xl max-w-4xl mx-auto">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">
              ¿No encuentras el programa que buscas?
            </h2>
            <p class="text-lg text-gray-600 mb-6">
              Contáctanos y te ayudaremos a encontrar la formación perfecta para tus objetivos profesionales
            </p>
            <a 
              href="/contacto"
              class="inline-flex items-center px-8 py-4 bg-celeste text-white font-bold text-lg rounded-xl hover:bg-turquesa transform hover:scale-105 transition-all duration-200 shadow-lg"
            >
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.014 8.014 0 01-4.244-1.206L3 21l2.206-5.756A8.014 8.014 0 013 12a8 8 0 018-8c4.418 0 8 3.582 8 8z"></path>
              </svg>
              Hablar con un Asesor
            </a>
          </div>
        </div>

      </div>
    </section>

  </div>
</Layout>

<style>
  .filter-btn {
    color: #6B7280;
  }
  
  .filter-btn.active {
    background-color: var(--color-celeste);
    color: white;
  }
  
  .filter-btn:hover:not(.active) {
    background-color: #F3F4F6;
    color: var(--color-celeste);
  }
  
  .program-card {
    transition: all 0.3s ease;
  }
  
  .program-card:hover {
    transform: translateY(-8px);
  }
  
  /* Forzar texto blanco en botones */
  .program-card a[class*="bg-celeste"],
  .program-card a[class*="bg-naranja"],
  .program-card a[class*="bg-turquesa"] {
    color: white !important;
  }
  
  .program-card a[class*="bg-celeste"]:hover,
  .program-card a[class*="bg-naranja"]:hover,
  .program-card a[class*="bg-turquesa"]:hover {
    color: white !important;
  }
</style>

<script>
  // Filtro de programas
  class ProgramFilter {
    constructor() {
      this.filterButtons = document.querySelectorAll('.filter-btn');
      this.programCards = document.querySelectorAll('.program-card');
      
      this.init();
    }

    init() {
      this.filterButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          const filter = e.target.dataset.filter;
          this.filterPrograms(filter);
          this.updateActiveButton(e.target);
        });
      });
    }

    filterPrograms(filter) {
      this.programCards.forEach(card => {
        const cardType = card.dataset.type;
        
        if (filter === 'todos' || cardType === filter) {
          card.style.display = 'block';
          setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
          }, 100);
        } else {
          card.style.opacity = '0';
          card.style.transform = 'translateY(20px)';
          setTimeout(() => {
            card.style.display = 'none';
          }, 300);
        }
      });
    }

    updateActiveButton(activeButton) {
      this.filterButtons.forEach(button => {
        button.classList.remove('active');
      });
      activeButton.classList.add('active');
    }
  }

  // Inicializar cuando DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    new ProgramFilter();
  });
</script>