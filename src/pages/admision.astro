---
import Layout from '../layouts/Layout.astro';
import TwoColumnBlock from '../components/sections/TwoColumnBlock.astro';

// Contenido sobre fórmate con nosotros
const formateContent = `
<p>Te acompañamos durante <strong>nuestras modalidades para garantizar las mejores prácticas</strong> de formación académica y profesional.</p>

<p><strong>Nuestros métodos de excelencia</strong> son la garantía de calidad en todos los programas académicos.</p>

<p><strong>Certificaciones y convenios disponibles</strong> para potenciar tu desarrollo profesional continuo.</p>
`;

// Datos de programas para la tabla
const programRows = [
  {
    program: "Diplomado Mediación Familiar",
    presencial: true,
    sincronica: true,
    asincronica: true,
    online: true
  },
  {
    program: "Diplomado Mediación Escolar", 
    presencial: false,
    sincronica: true,
    asincronica: true,
    online: true
  },
  {
    program: "Diplomado Mediación Laboral",
    presencial: true,
    sincronica: true,
    asincronica: true,
    online: true
  },
  {
    program: "Cursos",
    presencial: false,
    sincronica: false,
    asincronica: true,
    online: true
  }
];
---

<Layout 
  title="Admisión - EMED | Proceso de Inscripción y Modalidades"
  description="Conoce nuestro proceso de admisión, modalidades de estudio y opciones de financiamiento. Fórmate como mediador profesional con EMED."
>
  <div class="bg-crema min-h-screen">
  
  <!-- Hero más pequeño con SVG extendido -->
  <section class="hero-admision relative z-20">
    <!-- SVG de fondo que se extiende hacia abajo -->
    <div class="absolute top-0 left-0 w-full h-[150vh] -z-10">
      <img 
        src="/src/assets/images/pages/heroadmision.svg" 
        alt="" 
        class="w-full h-full object-cover object-top"
      />
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="flex justify-end items-center h-full min-h-[30vh]">
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-bold text-white mr-8 md:mr-16">
          Admisión
        </h1>
      </div>
    </div>
  </section>
  
  <!-- Sección Fórmate con nosotros -->
  <section class="bg-transparent relative z-30">
    <div class="mx-auto max-w-6xl rounded-2xl p-8 -mt-12 my-10">
      <TwoColumnBlock 
        image="https://images.unsplash.com/photo-1523580846011-d3a5bc25702b?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80"
        imageAlt="Graduados EMED celebrando"
        heading="fórmate con nosotros"
        content={formateContent}
        reverse={false}
      />
      
      <!-- Botones CTA -->
      <div class="container mx-auto px-4 mt-12">
        <div class="flex justify-center gap-6">
          <a 
            href="/programas" 
            class="inline-flex items-center px-8 py-3 bg-celeste text-white font-semibold rounded-full hover:bg-turquesa transition-colors duration-200"
          >
            Programas
          </a>
          <a 
            href="/contacto" 
            class="inline-flex items-center px-8 py-3 bg-naranja text-white font-semibold rounded-full hover:bg-amarillo transition-colors duration-200"
          >
            Inscríbete aquí
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Sección Financiamiento con formas orgánicas -->
  <section class="financing-section relative bg-crema overflow-hidden">
    <!-- Formas orgánicas de fondo -->
    <div class="absolute inset-0 w-full">
      <svg viewBox="0 0 1200 800" class="w-full h-full" preserveAspectRatio="none">
        <!-- Forma naranja principal -->
        <path d="M0,200 C200,150 400,100 600,120 C800,140 1000,100 1200,150 L1200,600 C1000,550 800,580 600,560 C400,540 200,580 0,550 Z" fill="#F5821F" opacity="0.9"/>
        <!-- Forma amarilla secundaria -->
        <path d="M0,400 C300,350 500,380 700,360 C900,340 1100,380 1200,350 L1200,800 L0,800 Z" fill="#FDB813" opacity="0.8"/>
      </svg>
    </div>
    
    <div class="container mx-auto px-4 pt-25 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        
        <!-- Contenido de financiamiento -->
        <div>
          <h2 class="text-4xl md:text-5xl font-bold text-black mb-8">
            Todos nuestros programas cuentan con alternativas de financiamiento
          </h2>
          
          <div class="space-y-6 mb-8">
            <div>
              <h3 class="text-xl font-bold text-white mb-2">
                Mediación Familiar: Becas de Cofinanciamiento por ciclo
              </h3>
              <p class="text-white">
                Otros diplomados y cursos: código SENCE
              </p>
            </div>
          </div>
          
          <a 
            href="#" 
            class="inline-flex items-center px-8 py-3 border-2 border-white text-white font-semibold rounded-full hover:bg-white hover:text-naranja transition-all duration-200"
          >
            FINANCIAMIENTO POR SENCE
          </a>
        </div>
        
        <!-- Logo SENCE -->
        <div class="flex justify-center">
          <img 
            src="/src/assets/images/pages/logo_sence-removebg-preview.png"
            alt="Logo SENCE" 
            class="h-24 w-80 object-contain"
          />
        </div>
        
      </div>
    </div>
  </section>
  
  <!-- Sección Modalidades de Estudio -->
  <section class="modalities-section relative overflow-hidden py-20">
    <!-- SVG de fondo que se extiende hacia arriba y abajo -->
    <div class="absolute -top-32 left-0 w-full h-[150vh] -z-10">
      <img 
        src="/src/assets/images/pages/midhero_admision.svg" 
        alt="" 
        class="w-full h-full object-cover object-center"
      />
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      
      <!-- Contenido con fondo blanco -->
      <div class="mx-auto max-w-6xl rounded-2xl p-8">
      
      <div class="text-center mb-16">
        <p class="text-lg text-gray-700 mb-4">Conoce la modalidad que desarrollamos para ti</p>
        <h2 class="text-4xl md:text-5xl font-bold text-black">
          Modalidad de Estudio
        </h2>
      </div>
      
      <!-- Tarjetas de modalidades -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        
        <!-- Asincrónico -->
        <div class="modality-card bg-white rounded-2xl p-8 text-center shadow-lg">
          <div class="mb-6">
            <svg class="w-16 h-16 mx-auto text-black" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-black mb-4">Asincrónico</h3>
          <p class="text-gray-700 text-sm leading-relaxed">
            A través de nuestra plataforma podrás acceder a e-learning cuantos módulos con material descargable, videos con apoyo y recursos que utilizan herramientas audiovisuales innovadoras.
          </p>
        </div>
        
        <!-- Sincrónico -->
        <div class="modality-card bg-white rounded-2xl p-8 text-center shadow-lg">
          <div class="mb-6">
            <svg class="w-16 h-16 mx-auto text-black" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17,10.5V7A1,1 0 0,0 16,6H4A1,1 0 0,0 3,7V17A1,1 0 0,0 4,18H16A1,1 0 0,0 17,17V13.5L21,17.5V6.5L17,10.5Z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-black mb-4">Sincrónico</h3>
          <p class="text-gray-700 text-sm leading-relaxed">
            Videoconferencias programadas en tiempo real donde puedas interactuar directamente sobre el contenido, dudar y ver en tiempo con los expertos de cada bloque como facilitadores en línea.
          </p>
        </div>
        
        <!-- Presencial -->
        <div class="modality-card bg-white rounded-2xl p-8 text-center shadow-lg">
          <div class="mb-6">
            <svg class="w-16 h-16 mx-auto text-black" fill="currentColor" viewBox="0 0 24 24">
              <path d="M16,4C18.11,4 19.81,5.69 19.81,7.8C19.81,9.91 18.11,11.6 16,11.6C13.89,11.6 12.19,9.91 12.19,7.8C12.19,5.69 13.89,4 16,4M16,13.4C18.67,13.4 24,14.73 24,17.4V20H8V17.4C8,14.73 13.33,13.4 16,13.4Z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-black mb-4">Presencial</h3>
          <p class="text-gray-700 text-sm leading-relaxed">
            Presencia de docentes acreditados que te entregarán el proceso completo de aprendizaje, desarrollando un rol activo como mediador.
          </p>
        </div>
        
      </div>
      </div>
    </div>
  </section>
  
  <!-- Tabla de Programas vs Modalidades -->
  <section class="programs-table-section bg-transparent relative z-30 py-20">
    <div class="container mx-auto px-4">
      
      <!-- Título mejorado -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-black mb-6">
          Modalidades Disponibles por Programa
        </h2>
        <p class="text-lg text-gray-700 mx-auto">
          Elige la modalidad que mejor se adapte a tu estilo de aprendizaje y disponibilidad de tiempo
        </p>
      </div>
      
      
      <!-- Tabla mejorada -->
      <div class="overflow-x-auto">
        <div class="bg-white rounded-2xl shadow-2xl border-2 border-gray-200 overflow-hidden max-w-5xl mx-auto">
          <div class="bg-gradient-to-r from-celeste to-turquesa p-6">
            <h3 class="text-xl font-bold text-center">Comparativa de Modalidades</h3>
          </div>
          <div class="bg-amber-100 border-l-4 border-amber-500 p-4 max-w-4xl mx-auto rounded-r-lg mb-5">
          <p class="text-sm text-amber-800">
            <strong>Importante:</strong> <br>
            Por normativa del Ministerio de Justicia, la pasantía del Diplomado de Mediación Familiar debe efectuarse 100% Presencial.
          </p>
        </div>
          
          <div class="p-6">
            <table class="w-full">
              <thead>
                <tr class="border-b-2 border-gray-200">
                  <th class="text-left py-6 px-6 font-bold text-gray-800 text-lg">Programa</th>
                  <th class="text-center py-6 px-4 font-bold text-gray-800">
                    <div class="flex flex-col items-center">
                      <svg class="w-6 h-6 text-celeste mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span class="text-sm">Asincrónica</span>
                    </div>
                  </th>
                  <th class="text-center py-6 px-4 font-bold text-gray-800">
                    <div class="flex flex-col items-center">
                      <svg class="w-6 h-6 text-turquesa mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                      </svg>
                      <span class="text-sm">Sincrónica</span>
                    </div>
                  </th>
                  <th class="text-center py-6 px-4 font-bold text-gray-800">
                    <div class="flex flex-col items-center">
                      <svg class="w-6 h-6 text-naranja mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                      </svg>
                      <span class="text-sm">Presencial</span>
                    </div>
                  </th>
                  <th class="text-center py-6 px-4 font-bold text-gray-800">
                    <div class="flex flex-col items-center">
                      <svg class="w-6 h-6 text-gray-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span class="text-sm">Modalidad</span>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                {programRows.map((program, index) => (
                  <tr class={`border-b border-gray-100 hover:bg-gray-50 transition-colors duration-200 ${index % 2 === 0 ? 'bg-gray-25' : 'bg-white'}`}>
                    <td class="py-6 px-6 font-semibold text-gray-800 text-base">{program.program}</td>
                    <td class="py-6 px-4 text-center">
                      <div class={`w-6 h-6 rounded-full mx-auto transition-all duration-200 ${program.asincronica ? 'bg-celeste shadow-lg' : 'bg-gray-200'}`}>
                        {program.asincronica && (
                          <svg class="w-4 h-4 text-white m-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                          </svg>
                        )}
                      </div>
                    </td>
                    <td class="py-6 px-4 text-center">
                      <div class={`w-6 h-6 rounded-full mx-auto transition-all duration-200 ${program.sincronica ? 'bg-turquesa shadow-lg' : 'bg-gray-200'}`}>
                        {program.sincronica && (
                          <svg class="w-4 h-4 text-white m-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                          </svg>
                        )}
                      </div>
                    </td>
                    <td class="py-6 px-4 text-center">
                      <div class={`w-6 h-6 rounded-full mx-auto transition-all duration-200 ${program.presencial ? 'bg-naranja shadow-lg' : 'bg-gray-200'}`}>
                        {program.presencial && (
                          <svg class="w-4 h-4 text-white m-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                          </svg>
                        )}
                      </div>
                    </td>
                    <td class="py-6 px-4 text-center">
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                        Semi Presencial
                      </span>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
          
      </div>
      
    </div>
  </section>

  <!-- CTA Final - Contactar Asesor -->
  <section class="final-cta-section relative py-20 bg-transparent z-30">
    <div class="container mx-auto px-4">
      <div class="bg-white rounded-3xl shadow-2xl overflow-hidden w-[80vw] mx-auto mb-8">
        <div class="bg-gradient-to-r from-celeste via-turquesa to-celeste rounded-3xl shadow-2xl overflow-hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 items-center">
          
          <!-- Contenido -->
          <div class="p-12">
            <div class="mb-6">
              <span class="inline-block bg-celeste/20 text-black px-4 py-2 rounded-full text-sm font-medium mb-4">
                ¡Da el primer paso!
              </span>
              <h2 class="text-4xl md:text-5xl font-bold text-black mb-6 leading-tight">
                Inicia tu carrera como
                <span class="text-naranja">Mediador Profesional</span>
              </h2>
              <p class="text-xl text-gray-700 mb-8 leading-relaxed">
                Habla con uno de nuestros asesores académicos y descubre cuál es el programa perfecto para ti. ¡Sin compromiso!
              </p>
            </div>
            
            <!-- Beneficios -->
            <div class="space-y-4 mb-8">
              <div class="flex items-center text-black">
                <svg class="w-6 h-6 text-celeste mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="font-medium">Asesoría personalizada gratuita</span>
              </div>
              <div class="flex items-center text-black">
                <svg class="w-6 h-6 text-celeste mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="font-medium">Información sobre financiamiento SENCE</span>
              </div>
              <div class="flex items-center text-black">
                <svg class="w-6 h-6 text-celeste mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="font-medium">Respuesta inmediata por WhatsApp</span>
              </div>
            </div>
            
            <!-- Botón CTA -->
            <div class="flex justify-center">
              <a 
                href="/contacto" 
                class="inline-flex items-center justify-center px-8 py-4 bg-naranja text-white font-bold text-lg rounded-xl hover:bg-amarillo transform hover:scale-105 transition-all duration-200 shadow-xl"
              >
                <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.014 8.014 0 01-4.244-1.206L3 21l2.206-5.756A8.014 8.014 0 013 12a8 8 0 018-8c4.418 0 8 3.582 8 8z"></path>
                </svg>
                Hablar con un Asesor
              </a>
            </div>
          </div>
          
          <!-- Mini Carrusel -->
          <div class="relative lg:h-96 h-64 bg-gradient-to-br from-gray-100 to-gray-50 flex items-center justify-center p-8">
            <div class="w-full max-w-sm">
              <!-- Carrusel Container -->
              <div class="carousel-container relative overflow-hidden rounded-xl">
                <div class="carousel-wrapper flex transition-transform duration-500 ease-in-out" id="carousel">
                  
                  <!-- Slide 1 -->
                  <div class="carousel-slide w-full flex-shrink-0 bg-white p-6 text-center">
                    <div class="w-16 h-16 mx-auto mb-4 bg-celeste/20 rounded-full flex items-center justify-center">
                      <svg class="w-10 h-10 text-celeste" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                      </svg>
                    </div>
                    <p class="text-2xl font-bold text-gray-800 mb-1">+3,000</p>
                    <p class="text-sm text-gray-600">Mediadores Certificados</p>
                  </div>
                  
                  <!-- Slide 2 -->
                  <div class="carousel-slide w-full flex-shrink-0 bg-white p-6 text-center">
                    <div class="w-16 h-16 mx-auto mb-4 bg-naranja/20 rounded-full flex items-center justify-center">
                      <svg class="w-10 h-10 text-naranja" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                    <p class="text-2xl font-bold text-gray-800 mb-1">20+</p>
                    <p class="text-sm text-gray-600">Años de Experiencia</p>
                  </div>
                  
                  <!-- Slide 3 -->
                  <div class="carousel-slide w-full flex-shrink-0 bg-white p-6 text-center">
                    <div class="w-16 h-16 mx-auto mb-4 bg-turquesa/20 rounded-full flex items-center justify-center">
                      <svg class="w-10 h-10 text-turquesa" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                      </svg>
                    </div>
                    <p class="text-2xl font-bold text-gray-800 mb-1">100%</p>
                    <p class="text-sm text-gray-600">Certificación SENCE</p>
                  </div>
                  
                </div>
              </div>
              
              <!-- Indicadores -->
              <div class="flex justify-center mt-4 space-x-2">
                <button class="carousel-dot w-2 h-2 rounded-full bg-celeste transition-all duration-200" data-slide="0"></button>
                <button class="carousel-dot w-2 h-2 rounded-full bg-gray-300 transition-all duration-200" data-slide="1"></button>
                <button class="carousel-dot w-2 h-2 rounded-full bg-gray-300 transition-all duration-200" data-slide="2"></button>
              </div>
            </div>
          </div>
          
        </div>
        </div>
      </div>
    </div>
  </section>

  </div>
</Layout>

<style>
  .hero-admision {
    min-height: 30vh;
  }
  
  .modality-card {
    transition: transform 0.3s ease, shadow 0.3s ease;
  }
  
  .modality-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  }
  
  .financing-section {
    min-height: 70vh;
  }
  
  .programs-table-section table {
    border-collapse: separate;
    border-spacing: 0;
  }
  
  .carousel-dot.active {
    background-color: var(--color-celeste);
  }
  
  /* Forzar texto blanco en todos los botones */
  a[class*="bg-celeste"],
  a[class*="bg-naranja"],
  a[class*="bg-turquesa"],
  .program-link,
  .main-cta-button {
    color: white !important;
  }
  
  a[class*="bg-celeste"]:hover,
  a[class*="bg-naranja"]:hover,
  a[class*="bg-turquesa"]:hover,
  .program-link:hover,
  .main-cta-button:hover {
    color: white !important;
  }
</style>

<script>
  // Mini Carrusel functionality
  class MiniCarousel {
    constructor() {
      this.carousel = document.getElementById('carousel');
      this.dots = document.querySelectorAll('.carousel-dot');
      this.currentSlide = 0;
      this.totalSlides = 3;
      
      this.init();
    }

    init() {
      // Auto-play functionality
      setInterval(() => {
        this.nextSlide();
      }, 3000);

      // Dot click functionality
      this.dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          this.goToSlide(index);
        });
      });
    }

    nextSlide() {
      this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
      this.updateCarousel();
    }

    goToSlide(slideIndex) {
      this.currentSlide = slideIndex;
      this.updateCarousel();
    }

    updateCarousel() {
      // Move carousel
      const translateX = -(this.currentSlide * 100);
      this.carousel.style.transform = `translateX(${translateX}%)`;

      // Update dots
      this.dots.forEach((dot, index) => {
        if (index === this.currentSlide) {
          dot.classList.add('active');
          dot.style.backgroundColor = 'var(--color-celeste)';
        } else {
          dot.classList.remove('active');
          dot.style.backgroundColor = '#d1d5db';
        }
      });
    }
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new MiniCarousel();
  });
</script>