---
import Layout from '../layouts/Layout.astro';
import { getEmedProducts } from '../lib/wp';

// Obtener productos de WooCommerce (principalmente cursos)
let cursos = [];
try {
  const productos = await getEmedProducts({ per_page: 50, orderby: 'menu_order', order: 'asc' });
  // Filtrar solo cursos (no diplomados, ya que tenemos páginas personalizadas)
  cursos = productos.filter(producto => producto.tipo === 'Curso');
} catch (error) {
  console.error('Error al cargar cursos:', error);
  cursos = [];
}

// Diplomados estáticos (con páginas personalizadas)
const diplomados = [
  {
    id: 'mediacion-familiar',
    titulo: 'Mediación Familiar',
    descripcion: 'Especialízate en resolución de conflictos familiares con certificación oficial del Ministerio de Justicia.',
    duracion: '120 horas',
    modalidad: 'Presencial + Online',
    nivel: 'Intermedio',
    precio: '$450.000',
    precioSence: '$350.000',
    destacado: true,
    imagen: 'https://images.unsplash.com/photo-1609220136736-443140cffec6?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80',
    badges: ['MÁS POPULAR', 'MINSAL'],
    url: '/diplomados/mediacion-familiar',
    beneficios: ['Certificación Ministerio de Justicia', 'Pasantía en centros oficiales', 'Registro oficial de mediadores']
  },
  {
    id: 'mediacion-escolar',
    titulo: 'Mediación Escolar',
    descripcion: 'Formación especializada para profesionales de la educación con herramientas para trabajo con menores.',
    duracion: '80 horas',
    modalidad: '100% Online',
    nivel: 'Básico',
    precio: '$320.000',
    precioSence: '$250.000',
    destacado: false,
    imagen: 'https://images.unsplash.com/photo-1544717297-fa95b6ee9643?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80',
    badges: ['PARA EDUCADORES', 'MINEDUC'],
    url: '/diplomados/mediacion-escolar',
    beneficios: ['Flexibilidad horaria total', 'Casos prácticos educativos', 'Material descargable permanente']
  },
  {
    id: 'mediacion-laboral',
    titulo: 'Mediación Laboral',
    descripcion: 'Especializado para profesionales de RRHH y líderes organizacionales en resolución de conflictos laborales.',
    duracion: '100 horas',
    modalidad: 'Presencial',
    nivel: 'Intermedio',
    precio: '$380.000',
    precioSence: '$290.000',
    destacado: false,
    imagen: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80',
    badges: ['PARA RRHH', 'EMPRESARIAL'],
    url: '/diplomados/mediacion-laboral',
    beneficios: ['Casos empresariales reales', 'Networking profesional RRHH', 'Herramientas diagnóstico organizacional']
  }
];
---

<Layout 
  title="Diplomados y Cursos - EMED | Formación Especializada en Mediación"
  description="Descubre nuestros diplomados especializados y cursos complementarios en mediación. Formación profesional con certificación reconocida y metodología práctica."
>
  <div class="bg-gray-50 min-h-screen">
  
    <!-- Hero Section -->
    <section class="hero-programas relative overflow-hidden py-24">
      <!-- SVG de fondo -->
      <div class="absolute inset-0">
        <svg viewBox="0 0 1200 800" class="w-full h-full" preserveAspectRatio="none">
          <!-- Forma celeste -->
          <path d="M0,0 L1200,0 L1200,650 C1000,620 800,660 600,640 C400,620 200,660 0,650 Z" fill="#7EC5D6"/>
        </svg>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center text-white">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6">
            Diplomados y Cursos
          </h1>
          <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed text-center">
            Formación especializada en mediación con metodología práctica y certificación reconocida
          </p>
          <div class="flex justify-center space-x-4">
            <span class="inline-block bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
              3 Diplomados Especializados
            </span>
            <span class="inline-block bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
              {cursos.length} Cursos Complementarios
            </span>
            <span class="inline-block bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
              Modalidades Flexibles
            </span>
          </div>
        </div>
      </div>
      
      <!-- Forma orgánica inferior -->
      <div class="absolute bottom-0 left-0 right-0 h-24">
        <svg viewBox="0 0 1200 120" class="w-full h-full" preserveAspectRatio="none">
          <path d="M0,120 C300,80 500,60 600,80 C700,100 900,60 1200,80 L1200,120 Z" fill="#FEF7E8"/>
        </svg>
      </div>
    </section>

    <!-- Diplomados Especializados -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
            Diplomados Especializados
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Programas de alta especialización con certificación oficial, metodología práctica y reconocimiento profesional
          </p>
        </div>

        <div class="grid md:grid-cols-1 lg:grid-cols-3 gap-8 max-w-7xl mx-auto mb-16">
          {diplomados.map((diplomado) => (
            <div class={`bg-white border border-gray-200 rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 ${diplomado.destacado ? 'ring-2 ring-naranja ring-opacity-50 shadow-2xl' : ''}`}>
              
              {diplomado.destacado && (
                <div class="bg-gradient-to-r from-naranja to-amarillo text-white px-4 py-2 text-sm font-bold text-center">
                  ⭐ MÁS POPULAR
                </div>
              )}
              
              <!-- Imagen -->
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={diplomado.imagen}
                  alt={diplomado.titulo}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <div class="absolute top-4 left-4">
                  <span class="inline-block px-3 py-1 rounded-full text-sm font-bold text-white bg-gray-900/80">
                    Diplomado
                  </span>
                </div>
                <div class="absolute top-4 right-4 space-x-1">
                  {diplomado.badges.map((badge) => (
                    <span class={`inline-block px-2 py-1 rounded-full text-xs font-bold text-white ${
                      badge === 'MÁS POPULAR' ? 'bg-naranja' :
                      badge === 'MINSAL' || badge === 'MINEDUC' ? 'bg-green-700' :
                      badge === 'PARA EDUCADORES' ? 'bg-blue-700' :
                      badge === 'PARA RRHH' ? 'bg-purple-700' :
                      badge === 'EMPRESARIAL' ? 'bg-gray-800' :
                      'bg-gray-700'
                    }`}>
                      ✓ {badge}
                    </span>
                  ))}
                </div>
              </div>
              
              <!-- Contenido -->
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-3">
                  {diplomado.titulo}
                </h3>
                
                <p class="text-gray-600 text-sm leading-relaxed mb-4">
                  {diplomado.descripcion}
                </p>
                
                <!-- Detalles -->
                <div class="space-y-2 mb-6">
                  <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-celeste" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span class="font-medium">Duración:</span> {diplomado.duracion}
                  </div>
                  
                  <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-turquesa" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                    <span class="font-medium">Modalidad:</span> {diplomado.modalidad}
                  </div>
                  
                  <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-verde" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                    <span class="font-medium">Nivel:</span> {diplomado.nivel}
                  </div>
                  
                  <div class="flex items-center text-sm">
                    <svg class="w-4 h-4 mr-2 text-naranja" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                    <div>
                      <span class="font-bold text-gray-800">{diplomado.precio}</span>
                      <div class="text-celeste text-xs font-semibold">{diplomado.precioSence} con SENCE</div>
                    </div>
                  </div>
                </div>
                
                <!-- Beneficios destacados -->
                <div class="border-t pt-4 mb-6">
                  {diplomado.beneficios.map((beneficio) => (
                    <div class="text-xs text-gray-600 mb-1 flex items-center">
                      <svg class="w-3 h-3 mr-1 text-celeste flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                      {beneficio}
                    </div>
                  ))}
                </div>
                
                <!-- Botones -->
                <div class="space-y-3">
                  <a 
                    href={diplomado.url}
                    class={`inline-flex items-center justify-center w-full px-6 py-3 font-bold rounded-lg transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg text-white ${diplomado.destacado ? 'bg-naranja hover:bg-amarillo' : 'bg-celeste hover:bg-turquesa'}`}
                  >
                    Ver Detalles Completos
                    <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                  
                  <button 
                    onclick="scrollToContactForm()"
                    class="inline-flex items-center justify-center w-full px-6 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-celeste hover:text-celeste transition-all duration-300"
                  >
                    Consultar con Asesor
                  </button>
                </div>
              </div>
              
            </div>
          ))}
        </div>

        <div class="text-center">
          <a 
            href="/diplomados"
            class="inline-flex items-center px-8 py-4 bg-celeste text-white font-bold text-lg rounded-xl hover:bg-turquesa transform hover:scale-105 transition-all duration-200 shadow-lg"
          >
            Ver Todos los Diplomados
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Cursos Complementarios -->
    <section class="py-20 bg-gray-100">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
            Cursos Complementarios
          </h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Cursos especializados y talleres prácticos para complementar tu formación en mediación
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
          {cursos.length > 0 ? (
            cursos.map((curso) => (
              <div class="bg-white border border-gray-200 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                
                <!-- Imagen -->
                <div class="relative h-48 overflow-hidden">
                  <img 
                    src={curso.images && curso.images.length > 0 ? curso.images[0].src : '/images/default-curso.jpg'}
                    alt={curso.name}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                  <div class="absolute top-4 left-4">
                    <span class="inline-block px-3 py-1 rounded-full text-sm font-bold text-white bg-turquesa">
                      {curso.tipo}
                    </span>
                  </div>
                  <div class="absolute top-4 right-4">
                    <span class="inline-block bg-black/70 text-white px-3 py-1 rounded-full text-sm font-medium">
                      {curso.modalidad}
                    </span>
                  </div>
                </div>
                
                <!-- Contenido -->
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-800 mb-3">
                    {curso.name}
                  </h3>
                  
                  <div class="text-gray-600 text-sm leading-relaxed mb-4" set:html={curso.short_description || curso.description?.substring(0, 120) + '...'}>
                  </div>
                  
                  <!-- Detalles -->
                  <div class="space-y-2 mb-6">
                    <div class="flex items-center text-sm text-gray-600">
                      <svg class="w-4 h-4 mr-2 text-celeste" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span class="font-medium">Duración:</span> {curso.duracion}
                    </div>
                    
                    <div class="flex items-center text-sm text-gray-600">
                      <svg class="w-4 h-4 mr-2 text-turquesa" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                      <span class="font-medium">Modalidad:</span> {curso.modalidad}
                    </div>
                    
                    <div class="flex items-center text-sm">
                      <svg class="w-4 h-4 mr-2 text-naranja" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                      </svg>
                      <span class="font-bold text-gray-800">{curso.precio_formateado || `$${parseInt(curso.price).toLocaleString('es-CL')}`}</span>
                    </div>
                  </div>
                  
                  <!-- Botones -->
                  <div class="space-y-3">
                    <a 
                      href={`/programas/${curso.slug}`}
                      class="inline-flex items-center justify-center w-full px-6 py-3 font-bold rounded-lg transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg bg-turquesa hover:bg-celeste text-white"
                    >
                      Ver Detalles
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                    
                    <button 
                      onclick="scrollToContactForm()"
                      class="inline-flex items-center justify-center w-full px-6 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-turquesa hover:text-turquesa transition-all duration-300"
                    >
                      Inscribirse
                    </button>
                  </div>
                </div>
                
              </div>
            ))
          ) : (
            <div class="col-span-full text-center py-16">
              <div class="bg-white border border-gray-200 rounded-2xl p-8 shadow-xl">
                <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Cursos en preparación</h3>
                <p class="text-gray-600 mb-6">Nuestros cursos complementarios estarán disponibles próximamente. Mientras tanto, puedes explorar nuestros diplomados especializados.</p>
                <a href="#diplomados" class="px-6 py-3 bg-celeste text-white font-semibold rounded-lg hover:bg-turquesa transition-colors">
                  Ver Diplomados
                </a>
              </div>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section id="contact-form" class="py-20 bg-gradient-to-br from-celeste to-turquesa">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            ¿Listo para especializarte en mediación?
          </h2>
          <p class="text-xl text-white/90 max-w-3xl mx-auto">
            Nuestros asesores académicos te ayudarán a elegir el programa perfecto para tu desarrollo profesional
          </p>
        </div>

        <div class="max-w-4xl mx-auto">
          <div class="bg-white rounded-2xl p-8 shadow-xl">
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold text-gray-800 mb-4">Consulta Gratuita con Asesor Académico</h3>
              <p class="text-gray-600">
                Completa tus datos y un especialista te contactará en las próximas 2 horas para resolver todas tus dudas
              </p>
            </div>

            <!-- Aquí iría el ContactForm component -->
            <div class="grid md:grid-cols-2 gap-8">
              <div class="space-y-4">
                <input 
                  type="text" 
                  placeholder="Nombre completo" 
                  class="w-full p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-celeste focus:border-transparent"
                />
                <input 
                  type="email" 
                  placeholder="Correo electrónico" 
                  class="w-full p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-celeste focus:border-transparent"
                />
                <input 
                  type="tel" 
                  placeholder="Teléfono" 
                  class="w-full p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-celeste focus:border-transparent"
                />
              </div>
              <div class="space-y-4">
                <select class="w-full p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-celeste focus:border-transparent">
                  <option value="">¿Qué programa te interesa?</option>
                  <option value="mediacion-familiar">Diplomado en Mediación Familiar</option>
                  <option value="mediacion-escolar">Diplomado en Mediación Escolar</option>
                  <option value="mediacion-laboral">Diplomado en Mediación Laboral</option>
                  <option value="cursos">Cursos complementarios</option>
                </select>
                <textarea 
                  placeholder="Cuéntanos sobre tu experiencia profesional y objetivos..." 
                  rows="4"
                  class="w-full p-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-celeste focus:border-transparent"
                ></textarea>
              </div>
            </div>
            
            <div class="text-center mt-8">
              <button class="px-8 py-4 bg-celeste text-white font-bold text-lg rounded-xl hover:bg-turquesa transform hover:scale-105 transition-all duration-200 shadow-lg">
                Solicitar Consulta Gratuita
              </button>
              <p class="text-sm text-gray-500 mt-4">
                O llámanos directamente al <a href="tel:+56912345678" class="text-celeste font-semibold">+569 1234 5678</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

  </div>
</Layout>

<style>
  .hero-programas {
    min-height: 70vh;
  }
  
  /* Forzar texto blanco en botones */
  a[class*="bg-celeste"],
  a[class*="bg-naranja"],
  a[class*="bg-turquesa"],
  button[class*="bg-celeste"],
  button[class*="bg-naranja"],
  button[class*="bg-turquesa"] {
    color: white !important;
    text-decoration: none !important;
  }
  
  a[class*="bg-celeste"]:hover,
  a[class*="bg-naranja"]:hover,
  a[class*="bg-turquesa"]:hover,
  button[class*="bg-celeste"]:hover,
  button[class*="bg-naranja"]:hover,
  button[class*="bg-turquesa"]:hover {
    color: white !important;
    text-decoration: none !important;
  }

  /* Links que actúan como botones secundarios */
  a[class*="border-gray"],
  a[class*="border-celeste"],
  a[class*="border-turquesa"] {
    text-decoration: none !important;
  }

  a[class*="border-gray"]:hover,
  a[class*="border-celeste"]:hover,
  a[class*="border-turquesa"]:hover {
    text-decoration: none !important;
  }
</style>

<script>
  // Función para scroll suave al formulario
  function scrollToContactForm() {
    document.getElementById('contact-form').scrollIntoView({
      behavior: 'smooth'
    });
  }
</script>