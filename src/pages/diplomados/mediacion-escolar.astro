import { getEmedProducts } from '../../lib/wp';

// Obtener datos del diplomado desde WooCommerce
let diplomadoWC = null;
try {
  const productos = await getEmedProducts({ per_page: 50 });
  diplomadoWC = productos.find(p => p.slug === 'mediacion-escolar' && p.tipo === 'Diplomado');
} catch (error) {
  console.error('Error al cargar diplomado desde WooCommerce:', error);
}

// Datos que se obtienen de WooCommerce (si está disponible)
const titulo = diplomadoWC?.name || 'Diplomado en Mediación Escolar';
const descripcionCorta = diplomadoWC?.short_description || 'Aprende a mediar conflictos educativos trabajando con estudiantes, padres y equipos docentes en ambientes escolares complejos.';
const duracion = diplomadoWC?.duracion || '80 horas';
const modalidad = diplomadoWC?.modalidad || '100% Online';
// Función para formatear precios (misma lógica que en diplomados.astro)
const formatearPrecio = (precio) => {
  if (!precio || precio === '0' || precio === 0) return null;
  let numero = typeof precio === 'string' ? parseFloat(precio.replace(/[^\d.-]/g, '')) : precio;
  if (isNaN(numero)) return null;
  
  // Si el número es menor a 1000, probablemente está en miles (ej: 550 = $550.000)
  if (numero < 1000 && numero > 0) {
    numero = numero * 1000;
  }
  
  return `$${numero.toLocaleString('es-CL')}`;
};

// Procesar precios correctamente (priorizar sale_price si existe)
const precioRegular = formatearPrecio(diplomadoWC?.regular_price || diplomadoWC?.price);
const precioOferta = formatearPrecio(diplomadoWC?.sale_price);
const precio = precioOferta || precioRegular || '$320.000';
const beneficios = diplomadoWC?.beneficios || [];
const temario = diplomadoWC?.temario || [];
const requisitos = diplomadoWC?.requisitos || [];
const metodologia = diplomadoWC?.metodologia || [];
const certificacion = diplomadoWC?.certificacion || [];
const empleabilidad = diplomadoWC?.empleabilidad || [];
const brochure = diplomadoWC?.brochure || null;
