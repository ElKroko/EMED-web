<Layout 
  title="Programas - EMED | Diplomados y Cursos de Mediación"
  description="Descubre nuestra amplia oferta de diplomados y cursos especializados en mediación. Formación profesional con certificación reconocida."
>
  <div class="bg-crema min-h-screen">
  
    <!-- Hero de Programas -->
    <section class="hero-programas relative overflow-hidden py-24">
      <!-- SVG de fondo -->
      <div class="absolute inset-0">
        <svg viewBox="0 0 1200 800" class="w-full h-full" preserveAspectRatio="none">
          <!-- Forma celeste -->
          <path d="M0,0 L1200,0 L1200,650 C1000,620 800,660 600,640 C400,620 200,660 0,650 Z" fill="#7EC5D6"/>
        </svg>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="text-center text-white">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6">
            Nuestros Programas
          </h1>
          <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed">
            Formación especializada en mediación con metodología práctica y certificación reconocida
          </p>
          <div class="flex justify-center space-x-4">
            <span class="inline-block bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
              6 Programas Disponibles
            </span>
            <span class="inline-block bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
              Modalidades Flexibles
            </span>
          </div>
        </div>
      </div>
      
      <!-- Forma orgánica inferior -->
      <div class="absolute bottom-0 left-0 right-0 h-24">
        <svg viewBox="0 0 1200 120" class="w-full h-full" preserveAspectRatio="none">
          <path d="M0,120 C300,80 500,60 600,80 C700,100 900,60 1200,80 L1200,120 Z" fill="#FEF7E8"/>
        </svg>
      </div>
    </section>

    <!-- Filtros y Grid de Programas -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        
        <!-- Filtros -->
        <div class="text-center mb-16">
          <div class="inline-flex bg-white rounded-full p-2 shadow-lg">
            <button class="filter-btn active px-6 py-3 rounded-full font-semibold transition-all duration-200" data-filter="todos">
              Todos
            </button>
            <button class="filter-btn px-6 py-3 rounded-full font-semibold transition-all duration-200" data-filter="diplomado">
              Diplomados
            </button>
            <button class="filter-btn px-6 py-3 rounded-full font-semibold transition-all duration-200" data-filter="curso">
              Cursos
            </button>
          </div>
        </div>

        <!-- Grid de Programas -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
          {programas.map((programa) => (
            <div class={`program-card bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 mb-8 ${programa.destacado ? 'ring-2 ring-naranja ring-opacity-50' : ''}`} data-type={programa.tipo.toLowerCase()}>
              
              {programa.destacado && (
                <div class="bg-gradient-to-r from-naranja to-amarillo text-white px-4 py-2 text-sm font-bold text-center">
                  ⭐ MÁS POPULAR
                </div>
              )}
              
              <!-- Imagen -->
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={programa.imagen}
                  alt={programa.titulo}
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
                <div class="absolute top-4 left-4">
                  <span class={`inline-block px-3 py-1 rounded-full text-sm font-bold text-white ${programa.tipo === 'Diplomado' ? 'bg-celeste' : 'bg-turquesa'}`}>
                    {programa.tipo}
                  </span>
                </div>
                <div class="absolute top-4 right-4">
                  <span class="inline-block bg-black/70 text-white px-3 py-1 rounded-full text-sm font-medium">
                    {programa.modalidad}
                  </span>
                </div>
              </div>
              
              <!-- Contenido -->
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-3">
                  {programa.titulo}
                </h3>
                
                <p class="text-gray-600 text-sm leading-relaxed mb-4">
                  {programa.descripcion}
                </p>
                
                <!-- Detalles -->
                <div class="space-y-2 mb-6">
                  <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-celeste" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span class="font-medium">Duración:</span> {programa.duracion}
                  </div>
                  
                  <div class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2 text-turquesa" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                    <span class="font-medium">Nivel:</span> {programa.nivel}
                  </div>
                  
                  <div class="flex items-center text-sm">
                    <svg class="w-4 h-4 mr-2 text-naranja" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                    <span class="font-bold text-gray-800">{programa.precio}</span>
                  </div>
                </div>
                
                <!-- Botones -->
                <div class="space-y-3">
                  <a 
                    href={`/programas/${programa.id}`}
                    class={`inline-flex items-center justify-center w-full px-6 py-3 font-bold rounded-lg transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg ${programa.destacado ? 'bg-naranja hover:bg-amarillo text-white' : 'bg-celeste hover:bg-turquesa text-white'}`}
                  >
                    Ver Detalles
                    <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                  
                  <a 
                    href="/admision"
                    class="inline-flex items-center justify-center w-full px-6 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-celeste hover:text-celeste transition-all duration-300"
                  >
                    Inscribirse
                  </a>
                </div>
              </div>
              
            </div>
          ))}
        </div>

        <!-- CTA Inferior -->
        <div class="text-center mt-16">
          <div class="bg-white rounded-2xl p-8 shadow-xl max-w-4xl mx-auto">
            <h2 class="text-3xl font-bold text-gray-800 mb-4">
              ¿No encuentras el programa que buscas?
            </h2>
            <p class="text-lg text-gray-600 mb-6">
              Contáctanos y te ayudaremos a encontrar la formación perfecta para tus objetivos profesionales
            </p>
            <a 
              href="/contacto"
              class="inline-flex items-center px-8 py-4 bg-celeste text-white font-bold text-lg rounded-xl hover:bg-turquesa transform hover:scale-105 transition-all duration-200 shadow-lg"
            >
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.014 8.014 0 01-4.244-1.206L3 21l2.206-5.756A8.014 8.014 0 013 12a8 8 0 018-8c4.418 0 8 3.582 8 8z"></path>
              </svg>
              Hablar con un Asesor
            </a>
          </div>
        </div>

      </div>
    </section>

  </div>
</Layout>

<style>
  .filter-btn {
    color: #6B7280;
  }
  
  .filter-btn.active {
    background-color: var(--color-celeste);
    color: white;
  }
  
  .filter-btn:hover:not(.active) {
    background-color: #F3F4F6;
    color: var(--color-celeste);
  }
  
  .program-card {
    transition: all 0.3s ease;
  }
  
  .program-card:hover {
    transform: translateY(-8px);
  }
  
  /* Forzar texto blanco en botones */
  .program-card a[class*="bg-celeste"],
  .program-card a[class*="bg-naranja"],
  .program-card a[class*="bg-turquesa"] {
    color: white !important;
  }
  
  .program-card a[class*="bg-celeste"]:hover,
  .program-card a[class*="bg-naranja"]:hover,
  .program-card a[class*="bg-turquesa"]:hover {
    color: white !important;
  }
</style>

<script>
  // Filtro de programas
  class ProgramFilter {
    constructor() {
      this.filterButtons = document.querySelectorAll('.filter-btn');
      this.programCards = document.querySelectorAll('.program-card');
      
      this.init();
    }

    init() {
      this.filterButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          const filter = e.target.dataset.filter;
          this.filterPrograms(filter);
          this.updateActiveButton(e.target);
        });
      });
    }

    filterPrograms(filter) {
      this.programCards.forEach(card => {
        const cardType = card.dataset.type;
        
        if (filter === 'todos' || cardType === filter) {
          card.style.display = 'block';
          setTimeout(() => {
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
          }, 100);
        } else {
          card.style.opacity = '0';
          card.style.transform = 'translateY(20px)';
          setTimeout(() => {
            card.style.display = 'none';
          }, 300);
        }
      });
    }

    updateActiveButton(activeButton) {
      this.filterButtons.forEach(button => {
        button.classList.remove('active');
      });
      activeButton.classList.add('active');
    }
  }

  // Inicializar cuando DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    new ProgramFilter();
  });
</script>