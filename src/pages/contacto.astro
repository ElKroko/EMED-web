---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/forms/ContactForm.astro';
import TwoColumnBlock from '../components/sections/TwoColumnBlock.astro';

// Información de contacto
const contactInfo = {
  address: "Av. Providencia 1234, Oficina 567\nProvidencia, Santiago, Chile",
  phone: "+56 2 2345 6789",
  whatsapp: "+56 9 1234 5678",
  email: "info@emed.cl",
  horarios: "Lunes a Viernes: 9:00 - 18:00\nSábados: 9:00 - 13:00"
};

// FAQ rápidas para lead qualification
const faqs = [
  {
    question: "¿Cuánto duran los programas?",
    answer: "Los diplomados tienen una duración de 4-6 meses, mientras que los cursos especializados duran entre 2-8 semanas."
  },
  {
    question: "¿Ofrecen modalidad online?",
    answer: "Sí, ofrecemos modalidades sincrónica, asincrónica y presencial para adaptarnos a tu disponibilidad."
  },
  {
    question: "¿Tienen financiamiento?",
    answer: "Sí, trabajamos con SENCE, becas de cofinanciamiento y facilidades de pago."
  },
  {
    question: "¿Los programas están acreditados?",
    answer: "Todos nuestros programas están acreditados por SENCE e IRAM con certificación reconocida."
  }
];
---

<Layout 
  title="Contacto - EMED | Habla con un Asesor Académico"
  description="Contáctanos para resolver tus dudas sobre nuestros programas de mediación. Asesores académicos especializados te guiarán en tu proceso de inscripción."
>
  
  <!-- Hero Section -->
  <section class="hero-contacto relative bg-gradient-to-br from-celeste via-turquesa to-celeste py-20">
    <div class="container mx-auto px-4 text-center text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Hablemos sobre tu futuro
      </h1>
      <p class="text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto">
        Nuestros asesores académicos están listos para guiarte en tu carrera como mediador profesional
      </p>
      
      <!-- CTAs rápidos -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://wa.me/56912345678?text=Hola,%20quiero%20información%20sobre%20los%20programas%20de%20EMED"
          target="_blank"
          class="inline-flex items-center px-6 py-3 md:px-8 md:py-4 bg-green-500 text-white font-bold text-base md:text-lg rounded-xl hover:bg-green-600 transform hover:scale-105 transition-all duration-200 shadow-xl"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
          </svg>
          WhatsApp Inmediato
        </a>
        
        <a 
          href="tel:+56223456789"
          class="inline-flex items-center px-6 py-3 md:px-8 md:py-4 bg-white/20 backdrop-blur-sm text-white font-bold text-base md:text-lg rounded-xl hover:bg-white/30 transition-all duration-200 border border-white/30"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Llamar Ahora
        </a>
      </div>
    </div>
  </section>

  <!-- Sección principal: Formulario + Información -->
  <section class="py-16 bg-crema">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        
        <!-- Formulario principal (2/3) -->
        <div class="lg:col-span-2">
          <ContactForm 
            type="general"
            title="¿En qué podemos ayudarte?"
            subtitle="Completa el formulario y un asesor académico te contactará en las próximas 2 horas"
            showUrgency={true}
          />
        </div>

        <!-- Información de contacto (1/3) -->
        <div class="lg:col-span-1">
          
          <!-- Información de contacto -->
          <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
            <h3 class="text-2xl font-bold text-gray-800 mb-6">Información de Contacto</h3>
            
            <div class="space-y-6">
              <!-- Dirección -->
              <div class="flex items-start space-x-4">
                <div class="bg-celeste/10 p-3 rounded-full">
                  <svg class="w-6 h-6 text-celeste" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-800 mb-1">Dirección</h4>
                  <p class="text-gray-600 text-sm leading-relaxed" set:html={contactInfo.address.replace('\n', '<br>')}></p>
                </div>
              </div>

              <!-- Teléfono -->
              <div class="flex items-start space-x-4">
                <div class="bg-celeste/10 p-3 rounded-full">
                  <svg class="w-6 h-6 text-celeste" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-800 mb-1">Teléfono</h4>
                  <a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="text-celeste hover:underline">
                    {contactInfo.phone}
                  </a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start space-x-4">
                <div class="bg-celeste/10 p-3 rounded-full">
                  <svg class="w-6 h-6 text-celeste" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-800 mb-1">Email</h4>
                  <a href={`mailto:${contactInfo.email}`} class="text-celeste hover:underline">
                    {contactInfo.email}
                  </a>
                </div>
              </div>

              <!-- Horarios -->
              <div class="flex items-start space-x-4">
                <div class="bg-celeste/10 p-3 rounded-full">
                  <svg class="w-6 h-6 text-celeste" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-800 mb-1">Horarios de Atención</h4>
                  <p class="text-gray-600 text-sm leading-relaxed" set:html={contactInfo.horarios.replace('\n', '<br>')}></p>
                </div>
              </div>
            </div>
          </div>

          <!-- CTAs adicionales -->
          <div class="bg-gradient-to-br from-naranja to-amarillo rounded-2xl p-8 text-white text-center">
            <h4 class="text-xl font-bold mb-4">¿Necesitas información específica?</h4>
            <div class="space-y-3">
              <a 
                href="/financiamiento" 
                class="block w-full bg-white/20 backdrop-blur-sm py-3 px-4 rounded-lg hover:bg-white/30 transition-all duration-200 font-semibold"
              >
                💰 Opciones de Financiamiento
              </a>
              <a 
                href="/empresas" 
                class="block w-full bg-white/20 backdrop-blur-sm py-3 px-4 rounded-lg hover:bg-white/30 transition-all duration-200 font-semibold"
              >
                🏢 Capacitación Empresarial
              </a>
              <a 
                href="/admision" 
                class="block w-full bg-white/20 backdrop-blur-sm py-3 px-4 rounded-lg hover:bg-white/30 transition-all duration-200 font-semibold"
              >
                🎓 Proceso de Admisión
              </a>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Preguntas Frecuentes
        </h2>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          Resuelve tus dudas más comunes antes de contactarnos
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
        {faqs.map((faq) => (
          <div class="bg-gray-50 rounded-2xl p-6 hover:shadow-lg transition-shadow duration-200">
            <h3 class="text-lg font-semibold text-gray-800 mb-3">
              {faq.question}
            </h3>
            <p class="text-gray-600 leading-relaxed">
              {faq.answer}
            </p>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-gray-600 mb-4">¿No encuentras la respuesta que buscas?</p>
        <a 
          href="#contact-form" 
          class="inline-flex items-center px-6 py-3 bg-celeste text-white font-semibold rounded-lg hover:bg-turquesa transition-colors duration-200"
        >
          Hacer una consulta específica
        </a>
      </div>
    </div>
  </section>

  <!-- Ubicación -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
          Nuestra Ubicación
        </h2>
        <p class="text-gray-600 text-lg">
          Visítanos en nuestras oficinas en el corazón de Santiago
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Mapa placeholder -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
          <div class="h-96 bg-gradient-to-br from-celeste to-turquesa flex items-center justify-center">
            <div class="text-center text-white">
              <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <p class="text-lg font-semibold">Mapa Interactivo</p>
              <p class="text-sm opacity-90">Próximamente integración con Google Maps</p>
            </div>
          </div>
        </div>

        <!-- Información de ubicación -->
        <div>
          <h3 class="text-2xl font-bold text-gray-800 mb-6">Cómo llegar</h3>
          
          <div class="space-y-6">
            <div>
              <h4 class="font-semibold text-gray-800 mb-2">🚇 Metro</h4>
              <p class="text-gray-600">Estación Manuel Montt (Línea 1) - 5 minutos caminando</p>
            </div>
            
            <div>
              <h4 class="font-semibold text-gray-800 mb-2">🚌 Bus</h4>
              <p class="text-gray-600">Múltiples recorridos por Av. Providencia</p>
            </div>
            
            <div>
              <h4 class="font-semibold text-gray-800 mb-2">🚗 Auto</h4>
              <p class="text-gray-600">Estacionamientos disponibles en el edificio</p>
            </div>
          </div>

          <div class="mt-8">
            <a 
              href="https://www.google.com/maps/search/Av.+Providencia+1234,+Santiago" 
              target="_blank"
              class="inline-flex items-center px-6 py-3 bg-naranja text-white font-semibold rounded-lg hover:bg-amarillo transition-colors duration-200"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Ver en Google Maps
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

</Layout>

<style>
  .hero-contacto {
    background-image: 
      radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  /* Forzar colores correctos en todos los botones */
  a[class*="bg-"],
  button[class*="bg-"] {
    color: white !important;
    text-decoration: none !important;
  }

  a[class*="bg-"]:hover,
  button[class*="bg-"]:hover {
    color: white !important;
    text-decoration: none !important;
  }

  /* Animación suave para el scroll */
  html {
    scroll-behavior: smooth;
  }

  /* Hover effects */
  .bg-gray-50:hover {
    background-color: #f8fafc;
  }
</style>